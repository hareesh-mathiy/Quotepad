<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/toolbar_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.florent37.materialviewpager.MaterialViewPager
            android:id="@+id/materialViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:viewpager_logo="@layout/header_logo_myquotes"
            app:viewpager_pagerTitleStrip="@layout/material_view_pager_pagertitlestrip_standard"
            app:viewpager_logoMarginTop="50dp"
            app:viewpager_color="@color/theme_primary"
            app:viewpager_headerHeight="150dp"
            app:viewpager_headerAlpha="1.0"
            app:viewpager_imageHeaderDarkLayerAlpha="0.2"
            app:viewpager_hideLogoWithFade="false"
            app:viewpager_hideToolbarAndTitle="true"
            app:viewpager_enableToolbarElevation="true"
            app:viewpager_parallaxHeaderFactor="0"
            app:viewpager_headerAdditionalHeight="4dp"
            app:viewpager_displayToolbarWhenSwipe="true"
            app:viewpager_transparentToolbar="false"
            app:viewpager_animatedHeaderImage="false" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>


