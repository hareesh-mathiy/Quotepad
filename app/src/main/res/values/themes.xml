<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_fabicons_1</item>
        <item name="android:windowBackground">@color/theme_background_1</item>
        <item name="android:textColorPrimary">@color/theme_primary_text_inverted</item>
        <item name="actionMenuTextColor">@color/theme_fabicons_1</item>
        <item name="android:textColorSecondary">@color/theme_primary_text_inverted</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="navBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_primary_trans</item>
        <item name="android:windowBackground">@color/theme_background_2</item>
        <item name="android:textColorPrimary">@color/theme_primary_text</item>
        <item name="actionMenuTextColor">@color/theme_fabicons_1</item>
        <item name="android:textColorSecondary">@color/theme_primary_trans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>